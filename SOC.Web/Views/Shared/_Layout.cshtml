<body class="home blog chrome layout-left-content theme-shelflife">
    <script type="text/javascript" src="//www.hellobar.com/hellobar.js"></script>
<script type="text/javascript">
    new HelloBar(51056, 71974);
</script>

    <header id="header">
        <div class="col-full">
            <a id="logo" href="/" title="@Model.Theme.TagLine">
                @*<img src="@(Model.URLs.CDNThemes)\@(Model.Theme.Name)\logo.png" alt="@Model.Theme.Name" />*@
                <h1>Karrbros Custom Apparel</h1>
            </a>    	
            <hgroup>
	    	    
                <h1 class="site-title"><a href="@Model.Theme.BaseURL">@Model.Theme.Name</a></h1>
                <h2 class="site-description">@Model.Theme.TagLine</h2>
			      	
            </hgroup>
        </div><!-- /.col-full -->
    </header><!-- /#header -->
	
    <div id="wrapper">
        <nav id="navigation" class="col-full" role="navigation">
            <ul id="main-nav" class="nav fl sf-js-enabled">
                <li id="menu-item-1671" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1671"><a href="/Account" class="sf-with-ul">Account</a>
                </li>
                <li id="menu-item-1681" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1681"><a href="/Order/Search" class="sf-with-ul">Order<span class="sf-sub-indicator"> »</span></a>
                    <ul class="sub-menu" style="display: none; visibility: hidden; ">
                        <li id="menu-item-1682" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1682"><a href="/Order/Search">Find Order Form</a></li>
                        <li id="menu-item-1683" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1683"><a href="/Order/History">View Order History</a></li>
                    </ul>
                </li>
                <li id="menu-item-1686" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1686"><a href="/Cart/Current" class="sf-with-ul">Cart<span class="sf-sub-indicator"> »</span></a>
                    <ul class="sub-menu" style="display: none; visibility: hidden; ">
                        <li id="menu-item-1687" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1687"><a href="/Cart/Current">View Cart</a></li>
                        <li id="menu-item-1688" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1688"><a href="/Cart/Checkout">Checkout</a></li>
                    </ul>
                </li>
            </ul>

            <div id="cart">
                @Html.Partial(MVC.Shared.Views.Partial.QuickCart, Model.Cart)
            </div>
        </nav><!-- /#navigation -->
        <div id="content" class="col-full">
            @if(Model.BreadCrumbs.Count > 0)
            {
                <div class="breadcrumb breadcrumbs woo-breadcrumbs">
                    <div class="breadcrumb-trail">
                        <span class="trail-before">
                            <span class="breadcrumb-title">You are here:</span>
                        </span> 
                        <a href="/Order/Search" title="Home" rel="home" class="trail-begin">Home</a> 
                        @{ var lastCrumb = Model.BreadCrumbs.LastOrDefault().Display; }
                        @foreach (var crumb in Model.BreadCrumbs)
                        {
                            <span class="sep">&gt;</span>
                            if (crumb.Display != lastCrumb)
                            {
                                <a href="@crumb.Url" title="@crumb.Title">@crumb.Display</a>
                            }
                            else
                            {
                                <span class="trail-end">@crumb.Display</span>
                            }
                        }
                    
                    </div>
                </div>
            }
            <div id="main" class="col-left">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer id="footer">

        <div class="col-full">

            <div id="copyright" class="col-left">
                <p>Karrbros © @DateTime.Now.Year. All Rights Reserved.</p>
            </div>
    	
            <div id="credit" class="col-right">
                <p>Powered by <a href="http://www.social-threads.com">Social Threads</a>.</p>
            </div>
    
        </div>

    </footer>

    <!-- Javascript at the bottom for fast page loading -->

