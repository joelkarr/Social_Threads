<body class="home blog chrome layout-left-content theme-shelflife">
	<header id="header">
		<div class="col-full">
            <a id="logo" href="/" title="@Model.Theme.TagLine">
                @*<img src="@(Model.URLs.CDNThemes)\@(Model.Theme.Name)\logo.png" alt="@Model.Theme.Name" />*@
                <h1>Karrbros Custom Apparel</h1>
			</a>    	
	    	<hgroup>
	    	    
				<h1 class="site-title"><a href="@Model.Theme.BaseURL">@Model.Theme.Name</a></h1>
				<h2 class="site-description">@Model.Theme.TagLine</h2>
			      	
			</hgroup>
        </div><!-- /.col-full -->
	</header><!-- /#header -->
	
    <div id="wrapper">
	    <nav id="navigation" class="col-full" role="navigation">
            <ul id="main-nav" class="nav fl sf-js-enabled">
                <li id="menu-item-1690" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1690">
                    <a href="/order/form">Order Form</a>
                </li>
                <li id="menu-item-1681" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1681"><a href="/Account/Info" class="sf-with-ul">My Account<span class="sf-sub-indicator"> »</span></a>
                    <ul class="sub-menu" style="display: none; visibility: hidden; ">
                        <li id="menu-item-1682" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1682"><a href="/Account/Edit">Edit Profile</a></li>
                        <li id="menu-item-1683" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1683"><a href="/Account/History">View Order History</a></li>
                    </ul>
                </li>
                <li id="menu-item-1686" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1686"><a href="/Cart/Current" class="sf-with-ul">Cart<span class="sf-sub-indicator"> »</span></a>
                    <ul class="sub-menu" style="display: none; visibility: hidden; ">
                        <li id="menu-item-1687" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1687"><a href="/Cart/Current">View Cart</a></li>
                        <li id="menu-item-1688" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-1688"><a href="/Cart/Checkout">Checkout</a></li>
                    </ul>
                </li>
            </ul>

        
            <ul class="mini-cart nav">
		        <li>
                    <a href="/cart/view" title="View Sho" class="cart-parent">
		    		    <span> 
                            <mark>@(Model.CartItemCount) items</mark>
                            <span class="amount">$@(Model.CartTotal)</span>
		    		    </span>
		    	    </a>
                    <ul class="cart_list" style="visibility: hidden; display: none; ">
                        <li class="cart-title"><h3>Your Cart Contents</h3></li>
                        @if (Model.CartItemCount == 0)
                        {
                            <li class="empty">No products in the cart.</li>
                        }
                        else
                        {
                            foreach(var item in Model.CartItems)
                            {
                                <li class="cart_list_product">
                                    <a href="/Item/@item.Id">
                                        <img width="400" height="400" src="@item.ThumbnailPath" class="attachment-shop_thumbnail wp-post-image" alt="@item.Name" title="@item.Name">@item.Name
                                    </a>
                                    <span class="quantity">@(item.Quantity) × <span class="amount">$@(item.Price)</span></span>
                                </li>
                            }
                        }
                    </ul>
		        </li>
	  	    </ul>

        </nav><!-- /#navigation -->
        <div id="content" class="col-full">
            <div id="main" class="col-left">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer id="footer">

    <div class="col-full">

    	<div id="copyright" class="col-left">
    	    		<p>Karrbros © @DateTime.Now.Year. All Rights Reserved.</p>
    	    	</div>
    	
    	<div id="credit" class="col-right">
    	    		<p>Powered by <a href="http://www.social-threads.com">Social Threads</a>.</p>
    	    	</div>
    
    </div>

</footer>

    <!-- Javascript at the bottom for fast page loading -->

    <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
    <script>!window.jQuery && document.write(unescape('%3Cscript src="@Url.Content("~/js/libs/jquery-1.5.1.min.js")"%3E%3C/script%3E'))</script>

    <script src="@(Model.URLs.CDNThemes)/@(Model.Theme.Name)/Scripts/general.js"></script>
    <script src="@(Model.URLs.CDNThemes)/@(Model.Theme.Name)/Scripts/respond.IE.js"></script>
    <script src="@(Model.URLs.CDNThemes)/@(Model.Theme.Name)/Scripts/third-party.js"></script>
    <!-- end concatenated and minified scripts-->

    @RenderSection( "ScriptSection", false)
