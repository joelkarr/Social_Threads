    <script src="@(Model.URLs.CDNThemes)/@(Model.Theme.Name)/Scripts/respond.IE.js"></script>
    <script src="@(Model.URLs.CDNThemes)/@(Model.Theme.Name)/Scripts/third-party.js"></script>
    <script src="@(Model.URLs.CDN)/Scripts/knockout-2.1.0.js"></script>
    <script src="@(Model.URLs.CDNThemes)/@(Model.Theme.Name)/Scripts/cart.js"></script>
